<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:innerRadius="0dp" android:shape="oval" android:thicknessRatio="2" android:useLevel="false">
            <!--<solid android:color="#fa09ad" />-->
            <solid android:color="@android:color/background_light" />
            <stroke android:width="2dp" android:color="@android:color/background_dark" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:innerRadius="0dp" android:shape="oval" android:thicknessRatio="2" android:useLevel="false">
            <solid android:color="@android:color/secondary_text_light_nodisable" />
            <!--<solid android:color="#c20586" />-->
            <stroke android:width="2dp" android:color="@android:color/background_dark" />
        </shape>
    </item>
</selector>